<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Xamarin.ViewCartPage"
             Padding="20">
    <ContentPage.ToolbarItems>
        <ToolbarItem x:Name="MainToolbar" Text="Main" Clicked="MainToolbar_Clicked"/>
    </ContentPage.ToolbarItems>
    <ContentPage.Content>
        <StackLayout VerticalOptions="CenterAndExpand">
            <ScrollView>
                <ListView x:Name="ListView"/>
            </ScrollView>
            <Button x:Name="ResumeButton" Text="Resume choosing products" Clicked="ResumeButton_Clicked"/>
            <Button x:Name="CheapestStoreButton" Text ="Show the cheapest store" Clicked="CheapestStoreButton_Clicked"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>