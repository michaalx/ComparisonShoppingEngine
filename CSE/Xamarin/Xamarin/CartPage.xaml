<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Xamarin.CartPage"
             Padding="20">
    <ContentPage.ToolbarItems>
        <ToolbarItem x:Name="MainToolbar" Text="Main" Clicked="MainToolbar_Clicked"/>
    </ContentPage.ToolbarItems>
    <ContentPage.Content>
        <StackLayout>
            <ListView x:Name="ListView">
                
            </ListView>
            <Button x:Name="RemoveItemButton" Text="Remove Item" Clicked="RemoveItemButton_Clicked"/>
            <Button x:Name="CheapestStoreButton" Text="Find cheapest store" Clicked="CheapestStoreButton_Clicked"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>